{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "clean": {
      "cache": false
    },
    "check-format": {},
    "check-ts": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "dependsOn": ["^clean", "^build"],
      "cache": false,
      "persistent": true
    },
    "format": {}
  }
}
